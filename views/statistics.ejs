  <!-- Chart 1 -->
  <script>
    var signUps = '<%= signUps %>'.split(',');
    // var nonZeroVal = signUps.filter(function(x) { return x !== 0; }).pop();
    function arrayOfDays() {
      var days = signUps.length;
      var daysArr = [];
      for (i = 1; i <= days; i++) {
        daysArr.push(i < 10 ? ("0" + i.toString()) : i.toString());
      }
      return daysArr;
    }

    let signedUpEmpsChart = document.getElementById('signedUpEmpsChart').getContext('2d');
    // Global Options
    Chart.defaults.global.defaultFontSize = 14;
    Chart.defaults.global.defaultFontColor = '#f2f2f2';
    new Chart(signedUpEmpsChart, {
      type: 'line', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
      data: {
        labels: arrayOfDays(),
        datasets: [{
          label: 'New Employers',
          data: signUps,
          backgroundColor: [
            '#863a92'
          ],
          borderWidth: 1,
          borderColor: '#777',
          hoverBorderWidth: 3,
          hoverBorderColor: '#fff'
        }]
      },
      options: {
        title: {
          display: true,
          text: 'Number Of New Signed Up Employers - May 21`',
          fontSize: 22
        },
        legend: {
          display: false,
          position: 'right',
          labels: {
            fontColor: '#000'
          }
        },
        tooltips: {
          enabled: true
        },
        scales: {
          // disables grid for x axis
          xAxes: [{
            gridLines: {
              display: false
            }
          }],
          // disables grid for y axis
          yAxes: [{
            gridLines: {
              display: true,
              color: "#2b3655"
            },
            ticks: {
              beginAtZero: true,
              precision: 0,
              min: 0,
              // max: Math.max(...signUps)+Math.max(...signUps)/2,
            }
          }]
        }
      }
    });
  </script>
